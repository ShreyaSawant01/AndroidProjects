<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="219dp"
        android:layout_height="45dp"
        android:layout_marginBottom="448dp"
        android:layout_marginEnd="84dp"
        android:fontFamily="sans-serif"
        android:text="Welcome to Aptech"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="155dp"
        android:layout_height="202dp"
        android:layout_marginBottom="232dp"
        android:layout_marginEnd="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/computer" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="168dp"
        android:layout_height="365dp"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="4dp"
        android:text="Aptech Limited is an Indian education and training company headquartered in Mumbai, India. In 2016, Aptech was voted as India's Most Trusted Brand in training and education in the consumer survey conducted by IBC Infomedia and Media Research Group (MRG). The company has its stock listed on the BSE and the NSE.In 2017, Aptech was selected 47th amongst India's Top 50 Best Mid-Size Workplaces (2017) by the Great Place to Work Institute India in association with MINT, by HT Media."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="152dp"
        android:layout_marginEnd="200dp"
        android:text="Explore Courses!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="32dp"
        android:text="Admin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>